{
	"$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
	"files": {
		"ignoreUnknown": false
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"trailingCommas": "es5",
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"recommended": true,
				"noExplicitAny": "off",
				"noShadowRestrictedNames": "off",
				"noArrayIndexKey": "off",
				"noUnknownAtRules": "off"
			},
			"nursery": {
				"recommended": true,
				"useSortedClasses": {
					"fix": "safe",
					"level": "warn",
					"options": {
						"attributes": ["classList"],
						"functions": ["clsx", "cva", "tv"]
					}
				}
			},
			"performance": {
				"recommended": true
			},
			"style": {
				"recommended": true,
				"noNonNullAssertion": "off",
				"useSelfClosingElements": "off"
			},
			"correctness": {
				"recommended": true,
				"useExhaustiveDependencies": "off"
			},
			"a11y": {
				"recommended": true,
				"noSvgWithoutTitle": "off"
			}
		}
	}
}
